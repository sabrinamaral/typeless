<div class="container search-container">
  <%= form_with  method: "get", class: "text-center search-form" do %>
    <%= text_field_tag :query, params[:query], placeholder: "Type your search.", class: "form-control search-input", data:{
      "bs-toggle": "popover", "bs-trigger": "hover focus", "bs-placement": "left", "bs-content": "You can combine words. Eg.: category + vendor's name"
    } %>
    <%= submit_tag "Search", name: "", class: "btn btn-primary search-btn" do %>
      <i class="fa-solid fa-magnifying-glass"></i>
    <% end %>
  <% end %>
</div>
